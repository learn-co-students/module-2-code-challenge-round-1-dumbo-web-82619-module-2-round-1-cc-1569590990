<h1>Appearances</h1>

<%= form_for @appearance do |f| %>

    <%= f.label 'Guest' %>
    <%= f.collection_select(@all_the_guests, :guest_id) 
{:prompt => 'Select'})%>
    <br /> <br />
  
    <%= f.label 'Episode' %>
    <%= f.collection_select(@all_the_episodes, :episode_id) 
{:prompt => 'Select'})%>
    <br /> <br />
  
    <%= f.label 'Rating' %>
    <%= f.select :rating, ['1', '2', '3', '4', '5']%>
    <br /> <br />
  
    <%= submit_tag "#{@appearance.new_record? ? 'Create' : 'Update'} Post" %>
  
  <% end %>